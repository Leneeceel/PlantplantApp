<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPDetailActivity">

    <TextView
        android:id="@+id/adminTxtDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail"
        android:textSize="@dimen/pt10"
        android:layout_centerHorizontal="true"/>

    <TableLayout
        android:id="@+id/adminLatTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminTxtDetail"
        android:stretchColumns="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/adminImgImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/adminTxtNamePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aaaa"
                android:layout_column="2"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/adminTxtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminLatTableLayout"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminTxtDesc"
        android:onClick="updateBtnClicked"
        android:text="Update" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateButton"
        android:onClick="deleteBtnClicked"
        android:text="Delete" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteButton"
        android:onClick="cancelBtnClicked"
        android:text="Back" />

</RelativeLayout>